            <TextBlock FontWeight="Bold" HorizontalAlignment="Left" Text="HÓA ĐƠN PHÒNG" VerticalAlignment="Center" Width="187" />
        </Border>
        <sdk:Label Grid.Row="2" Height="17" HorizontalAlignment="Left" Margin="13,10,0,0" Name="label1" VerticalAlignment="Top" Width="64" Content="Ngày vào" />
        <sdk:Label Height="17" HorizontalAlignment="Left" Margin="13,9,0,0" Name="label2" VerticalAlignment="Top" Width="64" Grid.Row="3" Content="Ngày ra" />
        <sdk:Label Height="17" HorizontalAlignment="Left" Margin="13,7,0,0" Name="label3" VerticalAlignment="Top" Width="62" Grid.Row="4" Content="Tiền phòng" />
        <sdk:Label Height="17" HorizontalAlignment="Left" Margin="10,6,0,0" Name="label4" VerticalAlignment="Top" Width="71" Grid.Row="5" Content="Tiền dịch vụ" />
        <sdk:Label Height="17" HorizontalAlignment="Left" Margin="10,7,0,0" Name="label5" VerticalAlignment="Top" Width="64" Grid.Row="6" Content="Trả trước" />
