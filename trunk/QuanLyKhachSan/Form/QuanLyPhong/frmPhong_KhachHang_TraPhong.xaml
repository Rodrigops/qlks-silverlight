        <TextBox Height="23" HorizontalAlignment="Left" Margin="0,6,0,0" Name="txtNgayRa" VerticalAlignment="Top" Width="93" Grid.Column="1" Grid.Row="3" IsReadOnly="True" />
        <TextBox Height="23" HorizontalAlignment="Left" Name="txtKhoanKhac" VerticalAlignment="Top" Width="169" Grid.Column="1" Grid.Row="8" Margin="0,6,0,0" />
        <TextBox Height="52" HorizontalAlignment="Left" Margin="0,6,0,0" Name="txtGhiChu" VerticalAlignment="Top" Width="295" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="2" Grid.RowSpan="2" />
        <TextBox Height="23" HorizontalAlignment="Left" Name="textBox6" VerticalAlignment="Top" Width="169" Grid.Column="1" Grid.Row="12" />
