        <TextBox Grid.Column="2" Height="23" HorizontalAlignment="Left" Margin="75,0,0,1" Name="txtPhutRa" VerticalAlignment="Bottom" Width="36" Grid.Row="3" IsReadOnly="True" />        
        <StackPanel Name="SPTienPhong" Grid.ColumnSpan="2" Grid.Row="4" Grid.Column="1" Height="Auto" Margin="0,10,0,6" />
        <StackPanel Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="5" Height="Auto" HorizontalAlignment="Left" Margin="0,9,0,0" Name="SPDichVu" VerticalAlignment="Top" Width="295" />
